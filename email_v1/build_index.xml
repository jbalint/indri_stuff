<parameters>
  <memory>200m</memory>
  <index>email_v1_index</index>
  <stemmer>
	<name>krovetz</name>
  </stemmer>
  <corpus>
	<path>tmp</path>
	<class>trectext</class>
  </corpus>

  <!-- allow retrival of exact (not-stemmed) field values as metadata -->
  <metadata>
	<field>from</field>
	<field>to</field>
	<field>cc</field>
	<field>date</field>
	<field>folder</field>
	<field>account</field>
  </metadata>

  <field><name>title</name></field>
  <field><name>from</name></field>
  <field><name>to</name></field>
  <field><name>cc</name></field>
  <field><name>date</name></field>
  <field><name>folder</name></field>
  <field><name>account</name></field>
</parameters>
